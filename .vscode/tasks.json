{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            // "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: debug",
            // "detail": "C/C++: debug",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${input:cppFileNameNoExt}.cpp",
                "-o",
                "debug/${input:cppFileNameNoExt}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: release",
            // "detail": "C/C++: release",
            "command": "/usr/bin/g++",
            "args": [
                "${input:cppFileNameNoExt}.cpp",
                "-o",
                "release/${input:cppFileNameNoExt}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "CUDA: debug",
            "command": "nvcc -g -G ${input:cuFileNameNoExt}.cu -Iinclude/ -o debug/${input:cuFileNameNoExt}",
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$nvcc"]
        }
        {
            "type": "shell",
            "label": "CUDA: release",
            "command": "nvcc ${input:cuFileNameNoExt}.cu -Iinclude -o relase/${input:cuFileNameNoExt}",
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$nvcc"]
        }
    ],
    "inputs": [
        {
            "id": "cppFileName",
            "type": "promptString",
            "description": "Enter the name of the C++ file you want to compile"
        },
        {
            "id": "cppFileNameNoExt",
            "type": "promptString",
            "description": "Enter the name of the C++ file (no extension) you want to compile"
        },
        {
            "id": "cppOutFileName",
            "type": "promptString",
            "description": "Enter the name of the compiled filename"
        },
        // {
        //     "id": "cppOutFileName",
        //     "type": "command",
        //     "command": "extension.commandvariable.transform",
        //     "args": {
        //         "text": "${input:cppFileName}",  // 此处不能替换 ${input:cppFileName}
        //         "find": "\\.cpp$",
        //         "replace": ""
        //     }
        // }
        {
            "id": "cuFileName",
            "type": "promptString",
            "description": "Enter the name of the CUDA C++ file you want to compile"
        },
        {
            "id": "cuFileNameNoExt",
            "type": "promptString",
            "description": "Enter the name of the CUDA C++ file (no extension) you want to compile"
        },
        {
            "id": "cuOutFileName",
            "type": "promptString",
            "description": "Enter the name of the compiled filename"
        },
    ],
    "version": "2.0.0"
}